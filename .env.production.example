# Production Environment Variables
# Copy this to .env.production and fill in the values

# Database connection string (uses Docker service name)
DATABASE_URL=postgresql://payload:payload@postgres:5432/payload

# Used to encrypt JWT tokens - CHANGE THIS!
PAYLOAD_SECRET=YOUR_SECRET_HERE

# Production URL - no trailing slash
NEXT_PUBLIC_SERVER_URL=https://your-domain.com

# Secret used to authenticate cron jobs
CRON_SECRET=YOUR_CRON_SECRET_HERE

# Used to validate preview requests
PREVIEW_SECRET=YOUR_PREVIEW_SECRET_HERE

# Telegram Bot (for access request notifications)
TELEGRAM_BOT_TOKEN=your_bot_token_here
TELEGRAM_CHAT_ID=tg_chat_here
